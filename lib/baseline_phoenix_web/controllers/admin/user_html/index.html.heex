<div class="w-full">
  <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-6">
    <div class="flex gap-4">
      Pagination
    </div>
    <div class="flex gap-2">
      <.link href={~p"/admin/users/new"} class="button button-small button-primary">
        Add player
      </.link>
      <%!-- <.link href={~p"/admin/users/merge?id=select"} class="button button-small bg-blue-500 hover:bg-blue-600 text-white hover:text-white">Merge Users</.link>
      <.link href={~p"/admin/users/imports"} class="button button-small button-tertiary">Manage imports</.link>
      <.link href={~p"/admin/users/potential_dupes"} class="button button-small button-tertiary">Duplicate Manager</.link> --%>
    </div>
  </div>
  <.table id="users" rows={@users}>
    <:col :let={user} label="Email"><%= user.email %></:col>
    <:col :let={user} label="Phone Number"><%= user.phone_number %></:col>
    <:col :let={user} label="Full Name"><%= user.full_name %></:col>
    <:col :let={user} label="Admin">
      <%= if user.admin, do: "Yes", else: "No" %>
    </:col>
    <:col :let={user} label="Confirmed">
      <%= if user.confirmed_at, do: "Yes", else: "No" %>
    </:col>
    <:action :let={user}>
      <div class="sr-only">
        <.link navigate={~p"/admin/users/#{user}"}>Show</.link>
      </div>
      <.link navigate={~p"/admin/users/#{user}/edit"}>Edit</.link>
    </:action>
    <:action :let={user}>
      <.link href={~p"/admin/users/#{user}"} method="delete" data-confirm="Are you sure?">
        Delete
      </.link>
    </:action>
  </.table>
</div>
